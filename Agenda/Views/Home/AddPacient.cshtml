@model Agenda.Domain.Models.PacientDto

@{
    ViewBag.Title = "Pacient";
}

<h2>@ViewBag.Title</h2>
<link href="~/semantic/packaged/css/semantic.min.css" rel="stylesheet" />
<script src="~/semantic/packaged/javascript/semantic.min.js"></script>
<script src="~/scripts/jquery-ui.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="column" align="left">
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left icon input">
                    <label>@Html.DisplayNameFor(model => model.pac_name)</label><br>
                    @Html.TextBoxFor(model => model.pac_name, new { @placeholder = "Full Name" })
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">

                    <label>@Html.DisplayNameFor(model => model.pac_mail)</label><br>
                    @Html.TextBoxFor(model => model.pac_mail, new { @placeholder = "aaaaaaa@domain.com" })
                </div>
            </div>
            <div>
                <input class="ui button" type="submit" value="Add Pacient" />
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
