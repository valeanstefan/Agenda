@model Agenda.Domain.Models.EvenimentDto

@{
    ViewBag.Title = "Eveniment";
}

<h2>@ViewBag.Title</h2>

<link href="~/semantic/packaged/css/semantic.min.css" rel="stylesheet" />
<script src="~/semantic/packaged/javascript/semantic.min.js"></script>
<script src="~/scripts/jquery-ui.js"></script>
@using (Html.BeginForm("CreateEvt","Home",FormMethod.Post,new { @class="ui form"}))
{
    @Html.AntiForgeryToken()

    <div class="column" align="left">
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left icon input">
                    <label>@Html.DisplayNameFor(model=>model.evt_name)</label><br>
                    @Html.TextBoxFor(model => model.evt_name, new { @placeholder = "Event" })
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">

                    <label>@Html.DisplayNameFor(model => model.evt_date)</label><br>
                    @Html.TextBoxFor(model => model.evt_date, new { @placeholder = "Date" })
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">

                    <label>@Html.DisplayNameFor(model => model.pac_id)</label><br>
                    @Html.TextBoxFor(model => model.pac_id, new { @placeholder = "Pacient" })
                </div>
            </div>
            <div>
                <input class="ui button" type="submit" value="Create Event" onclick="" />
            </div>

        </div>
    </div>
}
@using (Html.BeginForm("Index", "Home")) { 
<div>
    <input type="submit" value="Back" class="ui button"/>
</div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
